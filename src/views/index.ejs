<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos abaixos</p>   
            <%- include('includes/messages'); %>
            
          

            <div class="responsive-table">
                <table class="table my-3">
                    <% contatos.forEach(function(contato) { %>
                        <tr>
                            <td><%- contato.nome %></td>
                            <td><%- contato.sobrenome %></td>
                            <td><%- contato.email %></td>
                            <td><%- contato.telefone %></td>
                            <td><button><a href="/contato/index/<%= contato._id %>" class="text-decoration-none text-reset">Editar</a></button></td>
                            <td><a href="/contato/delete/<%= contato._id %>" class="text-decoration-none text-reset"><button>Remover</button></a></td>
                        </tr>
                    <% }); %>
                
                </table>
            </div>
        </div>

        

        <div class="col-lg-2"></div>

    </div>
</div>

<%- include('includes/footer'); %>